<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" 	xmlns:f="sap.f" xmlns="sap.m" 	xmlns:l="sap.ui.layout" xmlns:macros="sap.fe.macros" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="sap.fe.cap.managetravels.ext.main.Main">
	<f:DynamicPage id="FilterBarDefault" class="sapUiResponsiveContentPadding">
		<f:title>
			<f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
				<f:heading>
				<VBox>
				<Title id="_IDGenTitle1" text="Travels" level="H2" />		
				</VBox>
				</f:heading>
				<f:expandedContent>
				<VBox>
				<Label text="Travels with Highest Total Price"/>
				<HeaderContainer scrollStepByItem="2" id="container1" 
				content="{
					path:'/Travel', 
					parameters : {
						$filter : 'IsActiveEntity eq false or SiblingEntity/IsActiveEntity eq null'
					},
					filters: {path: 'TotalPrice', operator: 'GE', value1:25000}
					}">
					<GenericTile
						id="myTile"
						header="Travel {TravelID}"
						subheader="{Description}"
						press=".handlers.onPressed"
						class="sapUiTinyMarginEnd sapUiTinyMarginTop tileLayout"
			
					>
						<TileContent footer="{to_Customer/LastName} ({to_Customer_CustomerID})">
							<NumericContent
								withMargin="false"
								value="{TotalPrice}"
								valueColor="Good"
								scale="k"
							/>
						</TileContent>
					</GenericTile>			
				</HeaderContainer>	
				</VBox>			
				</f:expandedContent>				
				<f:snappedContent>
					<Text text="{fbConditions>/filtersTextInfo}" />
				</f:snappedContent>
			</f:DynamicPageTitle>
		</f:title>		
		<f:header>		
			<f:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
				<VBox id="_IDGenVBox1">								
					<macros:FilterBar
						metaPath="@com.sap.vocabularies.UI.v1.SelectionFields"
						id="FilterBar"
						filterChanged=".handlers.onFiltersChanged"
					/>
				</VBox>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>	
 					<macros:Table 
					id="Table"
					metaPath="@com.sap.vocabularies.UI.v1.LineItem"
					filterBar="FilterBar"
					/>			
		</f:content>
	</f:DynamicPage>
</mvc:View>